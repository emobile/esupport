
<%- if controller_name != 'sessions' %>
  <%= link_to t(:signin), new_user_session_path %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to t('devise.links.forgot_pwd'), new_user_password_path%>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.links.conf_inst'), new_user_confirmation_path %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.links.unlock_inst'), new_user_unlock_path%>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_user_authorize_path(resource_name, provider)%>
  <% end -%>
<% end -%>