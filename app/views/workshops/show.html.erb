<%- model_class = Workshop -%>

<%content_for :breadcrumb do%>
  <ul class="breadcrumb">
    <%if can? :show, Workshop and signed_in?%>
      <li><%=link_to @current_user.branch.name, @current_user.branch%><span class="divider">/</span></li>
    <%end%>
    <%if can? :index, Workshop%>
      <li><%=link_to t(:index), workshops_path%><span class="divider">/</span></li>
    <%end%>
    <li class="active"><%=@workshop.name%></li>
  </ul>
<%end%>

<div class="row-fluid">
  <div class="block span6" id="show-box-100">
    <a href="#details" class="block-heading" data-toggle="collapse"><%= @workshop.name %><span class="label label-notice"><%= t(:id) + ": " + @workshop.id.to_s%></span></a>
    <div id="details" class="block-body collapse in">
      <div id="left">
        <strong><%= model_class.human_attribute_name(:address1) %>:</strong>
        <%= @workshop.address1 %><br /> <br /> 
        <strong><%= model_class.human_attribute_name(:address2) %>:</strong>
        <%= @workshop.address2 %><br /> <br /> 
        <strong><%= model_class.human_attribute_name(:zip) %>:</strong>
        <%= @workshop.zip %><br /> <br /> 
        <strong><%= model_class.human_attribute_name(:city) %>:</strong>
        <%= @workshop.city %><br /> <br /> 
        <strong><%= model_class.human_attribute_name(:state) %>:</strong>
        <%= @workshop.state %><br /> <br /> 
        <strong><%= model_class.human_attribute_name(:country) %>:</strong>
        <%= @workshop.country %><br /> <br /> 
      </div>
      <div id="right">
        <strong><%= model_class.human_attribute_name(:email1) %>:</strong>
        <%= mail_to @workshop.email1, @workshop.email1 %><br />  <br /> 
        <strong><%= model_class.human_attribute_name(:email2) %>:</strong>
        <%= mail_to @workshop.email2, @workshop.email2 %><br />  <br /> 
        <strong><%= model_class.human_attribute_name(:phone1) %>:</strong>
        <%= @workshop.phone1 %><br />  <br /> 
        <strong><%= model_class.human_attribute_name(:phone2) %>:</strong>
        <%= @workshop.phone2 %><br />  <br /> 
        <strong><%= model_class.human_attribute_name(:user) %>:</strong>
        <%= @workshop.user.fullname %><br />  <br /> 
        <strong><%= model_class.human_attribute_name(:branch) %>:</strong>
        <%= @workshop.branch.name %><br />  <br /> 
      </div>
    </div>
  </div>
</div>

<%unless @workshop.description.nil?%>
  <div class="row-fluid">
    <div class="block span6" id="show-box-100">
      <a href="#box-info-backgroud" class="block-heading" data-toggle="collapse"><%= model_class.human_attribute_name(:description) %></a>
      <div id="box-info-backgroud" class="block-body collapse in">
        <p>
          <%= @workshop.description %>
        </p>
      </div>
    </div>
  </div>
<%end%>

<div class="form-actions">
  <%if can? :index, Workshop%>
    <%= link_to t(:back, :default => t("helpers.links.back")),
      workshops_path, :class => 'btn'  %>
  <%end%>
  <%if can? :edit, Workshop%>
    <%= link_to t(:edit, :default => t("helpers.links.edit")),
      edit_workshop_path(@workshop), :class => 'btn' %>
  <%end%>
  <%if can? :destroy, Workshop%>
    <%= link_to t(:destroy, :default => t("helpers.links.destroy")),
      workshop_path(@workshop),
      :method => 'delete',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-danger' %>
  <%end%>
  <%if can? :new, Workshop%>
    <%= link_to t(:new, :default => t("helpers.links.new")),
      new_workshop_path,
      :class => 'btn btn-primary', :title => t(:new) %>
  <%end%>
</div>
