<%- model_class = Branch -%>

<%content_for :breadcrumb do%>
  <ul class="breadcrumb">
    <%if can? :show, Branch and signed_in?%>
      <li><%=link_to @branch.name, @branch%><span class="divider">/</span></li>
    <%end%>
    <%if can? :index, Branch%>
      <li><%=link_to t(:index), branches_path%><span class="divider">/</span></li>
    <%end%>
      <li class="active"><%=@branch.name%></li>
  </ul>
<%end%>

<div class="row-fluid">
  <div class="block span6" id="show-box-100">
    <a href="#details" class="block-heading" data-toggle="collapse"><%= @branch.name %><span class="label label-notice"><%= t(:id) + ": " + @branch.id.to_s%></span></a>
    <div id="details" class="block-body collapse in">
      <div id="left">
        <strong><%= model_class.human_attribute_name(:address1) %>:</strong>
        <%= @branch.address1 %><br /> <br /> 
        <strong><%= model_class.human_attribute_name(:address2) %>:</strong>
        <%= @branch.address2 %><br /> <br /> 
        <strong><%= model_class.human_attribute_name(:zip) %>:</strong>
        <%= @branch.zip %><br /> <br /> 
        <strong><%= model_class.human_attribute_name(:city) %>:</strong>
        <%= @branch.city %><br /> <br /> 
        <strong><%= model_class.human_attribute_name(:state) %>:</strong>
        <%= @branch.state %><br /> <br /> 
        <strong><%= model_class.human_attribute_name(:country) %>:</strong>
        <%= @branch.country %><br /> <br /> 
      </div>
      <div id="right">
        <strong><%= model_class.human_attribute_name(:email1) %>:</strong>
        <%= mail_to @branch.email1, @branch.email1 %><br />  <br /> 
        <strong><%= model_class.human_attribute_name(:email2) %>:</strong>
        <%= mail_to @branch.email2, @branch.email2 %><br />  <br /> 
        <strong><%= model_class.human_attribute_name(:webpage) %>:</strong>
        <%= link_to @branch.webpage, @branch.webpage %><br />  <br /> 
        <strong><%= model_class.human_attribute_name(:phone1) %>:</strong>
        <%= @branch.phone1 %><br />  <br /> 
        <strong><%= model_class.human_attribute_name(:phone2) %>:</strong>
        <%= @branch.phone2 %><br />  <br /> 
        <strong><%= model_class.human_attribute_name(:created_at) %>:</strong>
        <%= @branch.created_at %><br />  <br /> 
      </div>
    </div>
  </div>
</div>

<%unless @branch.description.nil?%>
  <div class="row-fluid">
    <div class="block span6" id="show-box-100">
      <a href="#box-info-backgroud" class="block-heading" data-toggle="collapse"><%= model_class.human_attribute_name(:description) %></a>
      <div id="box-info-backgroud" class="block-body collapse in">
      <br />
      <p>
        <%= @branch.description %>
      </p>
      </div>
    </div>
  </div>
<%end%>

<div class="form-actions">
  <%if can? :index, Branch%>
    <%= link_to t(:back, :default => t("helpers.links.back")),
      branches_path, :class => 'btn'  %>
  <%end%>
  <%if can? :edit, Branch%>
    <%= link_to t(:edit, :default => t("helpers.links.edit")),
      edit_branch_path(@branch), :class => 'btn' %>
  <%end%>
  <%if can? :destroy, Branch%>
    <%= link_to t(:destroy, :default => t("helpers.links.destroy")),
      branch_path(@branch),
      :method => 'delete',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-danger' %>
  <%end%>
  <%if can? :new, Branch%>
    <%= link_to t(:new, :default => t("helpers.links.new")),
      new_branch_path,
      :class => 'btn btn-primary', :title => t(:new) %>
  <%end%>
</div>
