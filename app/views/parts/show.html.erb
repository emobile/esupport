<%content_for :breadcrumb do%>
  <ul class="breadcrumb">
    <%if can? :show, Part and @is_user%>
      <li><%=link_to @current_user.branch.name, @current_user.branch%><span class="divider">/</span></li>
    <%end%>
    <%if can? :index, Part%>
      <li><%=link_to t(:index), parts_path%><span class="divider">/</span></li>
    <%end%>
    <li class="active"><%=@part.name%></li>
  </ul>
<%end%>

<div class="row-fluid">
  <div class="block span6">
    <a href="#details" class="block-heading" data-toggle="collapse"><%= t(:general_info) %></a>
    <div id="details" class="block-body collapse in">
      <p>
        <b>Name:</b>
        <%= @part.name %>
      </p>
      <p>
        <b>Branch:</b>
        <%= @part.branch.name %>
      </p>  
      <p>
        <b>Serial number:</b>
        <%= @part.serial_number %>
      </p>
      <p>
        <b>Cost:</b>
        <%= @part.cost %>
      </p>
    </div>
  </div>
  <div class="block span6">
    <a href="#box-info-backgroud" class="block-heading" data-toggle="collapse"><%= t(:description) %></a>
    <div id="box-info-backgroud" class="block-body collapse in">
      <br />
      <p>
        <%= @part.description %>
      </p>
    </div>
  </div>
</div>

<div class="form-actions">
  <%if can? :index, Part%>
    <%= link_to t(:back, :default => t("helpers.links.back")),
      parts_path, :class => 'btn'  %>
  <%end%>
  <%if can? :edit, Part%>
    <%= link_to t(:edit, :default => t("helpers.links.edit")),
      edit_part_path(@part), :class => 'btn' %>
  <%end%>
  <%if can? :destroy, Part%>
    <%= link_to t(:destroy, :default => t("helpers.links.destroy")),
      part_path(@part),
      :method => 'delete',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-danger' %>
  <%end%>
  <%if can? :new, Part%>
    <%= link_to t(:new, :default => t("helpers.links.new")),
      new_part_path,
      :class => 'btn btn-primary', :title => t(:new) %>
  <%end%>
</div>